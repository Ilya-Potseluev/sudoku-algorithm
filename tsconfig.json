{
	"compilerOptions": {
		"outDir": "./dist/",
		"noImplicitAny": true,
		"module": "ESNext",
		"target": "ESNext",
		"allowJs": true,
		"emitDecoratorMetadata": true,
		"incremental": true,
		"strict": true,
		"strictPropertyInitialization": false,
		"skipLibCheck": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true
	}
}
